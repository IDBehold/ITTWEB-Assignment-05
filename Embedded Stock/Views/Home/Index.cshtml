@model Embedded_Stock.Models.Home
@{
    ViewData["Title"] = "Home Page";
}

<form action="/Home/ComponentList">
    <div class="form-group">
        <label class="control-label">Component Type</label>
        <select id="ComponentTypeId" name="ComponentTypeId">
            @foreach (var componentType in ViewBag.ComponentTypes)
            {
                <option value="@componentType.ComponentTypeId">@componentType.ComponentName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Find" class="btn btn-default"/>
    </div>
</form>


<form action="/Home/ComponentTypesList">
    <div class="form-group">
        <label class="control-label">Category</label>
        <select id="CategoryId" name="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Find" class="btn btn-default" />
    </div>
</form>



